<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Module05_Exercise01.MainPage">

    <StackLayout>
        <Label Text="Enter your name:" />
        <Entry Placeholder="Name" x:Name="nameEntry" />
        <Label Text="Select your birth date:" />
        <DatePicker x:Name="datePicker" />
        <Label Text="Are you a student?" />
        <Switch x:Name="studentSwitch" />
        <Button Text="Submit" Clicked="OnSubmitButtonClicked" />
    </StackLayout>

</ContentPage>
